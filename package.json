{
  "name": "v-utils",
  "version": "0.0.1",
  "description": "Self-use front-end assistive tool library",
  "main": "index.js",
  "scripts": {
    "dev": "node scripts/build.js --watch",
    "build": "cross-env NODE_ENV=production node scripts/build.js",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts packages/*/src/**.ts",
    "format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\""
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VFiee/v-utils.git"
  },
  "keywords": [
    "utils",
    "front-end",
    "javaScript",
    "typeScript"
  ],
  "author": "vyron",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VFiee/v-utils/issues"
  },
  "engines": {
    "node": ">=v14.17.6",
    "pnpm": ">=6.25.1"
  },
  "homepage": "https://github.com/VFiee/v-utils#readme",
  "publishConfig": {
    "main": "index.js",
    "typings": "index.d.ts"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.19.4",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "brotli": "^1.3.2",
    "chalk": "4.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "execa": "5.1.1",
    "lint-staged": "^12.3.3",
    "minimist": "^1.2.5",
    "prettier": "^2.5.1",
    "rollup": "^2.67.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "typescript": "^4.5.4",
    "yorkie": "^2.0.0",
    "zlib": "^1.0.5"
  }
}