{
  "private": "true",
  "version": "0.0.1",
  "description": "Front-end tool library",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "cross-env NODE_ENV=production node scripts/build.js -ts",
    "release": "node scripts/release.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preinstall": "npx only-allow pnpm",
    "test": "jest --no-cache",
    "test:package": "jest --no-cache --filter ./scripts/filter-package.js",
    "plop": "plop --plopfile plop/config.mjs",
    "lint": "eslint --ext .ts packages/*/src/**.ts",
    "format": "prettier --write --parser typescript \"packages/**/*.ts?(x)\""
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VFiee/utils.git"
  },
  "keywords": [
    "js",
    "ts",
    "utils",
    "front-end",
    "javaScript",
    "typeScript"
  ],
  "author": "vyron",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VFiee/utils/issues"
  },
  "engines": {
    "node": ">=v14.17.6",
    "pnpm": ">=6.25.1"
  },
  "homepage": "https://github.com/VFiee/utils#readme",
  "publishConfig": {
    "main": "index.js",
    "typings": "index.d.ts"
  },
  "devDependencies": {
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "@microsoft/api-extractor": "^7.24.1",
    "@types/bluebird": "^3.5.36",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.17.0",
    "brotli": "^1.3.2",
    "chalk": "4.1.2",
    "conventional-changelog-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "enquirer": "^2.3.6",
    "esbuild": "^0.14.23",
    "eslint": "^8.12.0",
    "execa": "5.1.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "lodash.get": "^4.4.2",
    "lodash.set": "^4.3.2",
    "minimist": "^1.2.6",
    "ora": "5.4.1",
    "package-json": "^7.0.0",
    "plop": "^3.1.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "semver": "^7.3.5",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-toolbelt": "^9.6.0",
    "typescript": "^4.6.4",
    "yorkie": "^2.0.0",
    "zlib": "^1.0.5"
  }
}