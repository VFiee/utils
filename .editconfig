# https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties

# is root level config
root = true

[*]
indent_style = space
indent_size = 4
tab_width = 2
end_if_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,markdown}]
trim_trailing_whitespace = false